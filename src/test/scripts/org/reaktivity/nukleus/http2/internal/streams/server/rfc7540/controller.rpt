property newTargetInputRef ${nuklei:newReferenceId()} # external scope

property nukleiRG010001C ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property tcpC ${nukleiRG010001C.control("tcp")}
property http2C ${nukleiRG010001C.control("http2")}

#
# http
#
connect agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(http2C.controller)}
        option writer ${agrona:manyToOneWriter(http2C.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${http2C.nextCorrelationId()}
write [0x00 0x01]
write [0x03] "tcp"
write [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
write [0x06] "target"
write ${newTargetInputRef}
write [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
write flush

read [0x40 0x00 0x00 0x01]
read ${http2C.correlationId()}
read ([0..8]:newHttp2InputRef)

read notify ROUTED_INPUT

close
closed

#
# tcp
#
connect await ROUTED_INPUT
        agrona://stream/bidirectional
        option reader ${agrona:broadcastReceiver(tcpC.controller)}
        option writer ${agrona:manyToOneWriter(tcpC.nukleus)}

connected

write [0x00 0x00 0x00 0x01]
write ${tcpC.nextCorrelationId()}
write [0x00 0x01]
write [0x03] "any"
write [0x90 0x1f 0x00 0x00 0x00 0x00 0x00 0x00] # TODO: native long
write [0x05] "http2"
write ${newHttp2InputRef}
write [0x01] [0x7f 0x00 0x00 0x01]
write flush

read [0x40 0x00 0x00 0x01]
read ${tcpC.correlationId()}
read [0x90 0x1f 0x00 0x00 0x00 0x00 0x00 0x00] # TODO: native long


read notify ROUTED_INPUT1

close
closed
